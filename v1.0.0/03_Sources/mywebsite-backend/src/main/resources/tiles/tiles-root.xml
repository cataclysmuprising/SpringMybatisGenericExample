<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/views/base/template/baseLayout.jsp">
		<put-attribute name="menu" value="/WEB-INF/views/base/template/mainMenu.jsp" />
		<put-attribute name="content" value="" />
		<put-list-attribute name="layoutScripts">
			<add-attribute value="/js/jquery/jquery-1.12.3.js" />
			<add-attribute value="/js/bootstrap/bootstrap.js" />
			<add-attribute value="/js/bootstrap/bootstrap-select.min.js" />
			<add-attribute value="/js/common/pace.js" />
			<add-attribute value="/js/common/lobibox.min.js" />
			<add-attribute value="/js/common/base.js" />
		</put-list-attribute>
		<put-list-attribute name="layoutStyles">
			<add-attribute value="/css/bootstrap/bootstrap.css" />
			<add-attribute value="/css/bootstrap/bootstrap-select.min.css" />
			<add-attribute value="/css/common/pace.css" />
			<add-attribute value="/css/common/lobibox.min.css" />
			<add-attribute value="/css/common/base.css" />
		</put-list-attribute>			
	</definition>
	
	<definition name="login" template="/WEB-INF/views/base/login.jsp">
		<put-list-attribute name="layoutScripts">
			<add-attribute value="/js/jquery/jquery-1.12.3.js" />
			<add-attribute value="/js/bootstrap/bootstrap.js" />
		</put-list-attribute>	
		<put-list-attribute name="layoutStyles">
			<add-attribute value="/css/bootstrap/bootstrap.css" />
		</put-list-attribute>	
	</definition>
	
	<definition name="error/*" template="/WEB-INF/views/base/error/errorLayout.jsp">
	 	<put-attribute name="content" value="/WEB-INF/views/base/error/{1}.jsp" />
		<put-list-attribute name="layoutScripts">
		</put-list-attribute>	
		<put-list-attribute name="layoutStyles">
			<add-attribute value="/css/common/error.css" />
		</put-list-attribute>	
	</definition>
	
</tiles-definitions>