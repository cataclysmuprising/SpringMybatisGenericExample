<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycom.products.mywebsite.core.mapper.config.ActionMapper">
	<resultMap type="ActionBean" id="ActionResult">
		<id property="id" 					column="actionId" />
		<result property="page" 			column="page" />
		<result property="actionName" 		column="actionName" />
		<result property="displayName"  	column="display_name" />
		<result property="url" 				column="url" />
		<result property="actionType" 		column="action_type" />
		<result property="description"  	column="actionDescription" />
		<result property="recordRegId" 		column="record_reg_id"/>
		<result property="recordUpdId" 		column="record_upd_id"/>
		<result property="recordRegDate" 	column="record_reg_date"/>
		<result property="recordUpdDate" 	column="record_upd_date"/>			
		<collection property="roles" ofType="RoleBean">
			<id property="id" 				column="roleId" />
			<result property="name" 		column="roleName" />
			<result property="description"  column="roleDescription" />			
		</collection>
	</resultMap>
	
	<sql id="tables">
		FROM tbl_action action
		INNER JOIN tbl_role_action roleAction ON action.id=roleAction.action_id
		INNER JOIN tbl_role role ON roleAction.role_id=role.id
	</sql>
		
	<sql id="columns">
		SELECT
		action.id AS actionId,
		action.page,
		action.action_name AS actionName,
		action.display_name,
		action.url,
		action.action_type,
		action.description AS actionDescription,
		role.id AS roleId,
		role.name AS roleName,
		role.description AS roleDescription
	</sql>

	<sql id="criterias">
		<where>
			<if test="id != null">
				action.id = #{id}
			</if>
			<if test="ids != null">
				AND action.id IN
			    <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			        ${id}
			    </foreach>
			</if>			
			<if test="page != null">
				AND action.page = #{page}
			</if>
			<if test="actionName != null">
				AND action.action_name = #{actionName}
			</if>			
			<if test="actionType != null">
				AND action.action_type = #{actionType}
			</if>	
			<if test="roleId != null">
				AND role.id = #{roleId}
			</if>			
			<if test="word != null">
			    AND
			    (action.page LIKE '%${word}%'
				OR action.action_name LIKE '%${word}%'
				OR action.display_name LIKE '%${word}%'
				OR action.url LIKE '%${word}%'
				OR action.description LIKE '%${word}%')
			</if>
		</where>
	</sql>
			
	<sql id="orders">
		ORDER BY
		<choose>
			<when test="orderBy == 'id'">
				action.id ${orderAs}
			</when>
			<when test="orderBy == 'page'">
				action.page ${orderAs}
			</when>
			<when test="orderBy == 'actionName'">
				action.action_name ${orderAs}
			</when>
			<when test="orderBy == 'displayName'">
				action.display_name ${orderAs}
			</when>
			<when test="orderBy == 'actionType'">
				action.action_type ${orderAs}
			</when>						
			<otherwise>
				action.id DESC
			</otherwise>
		</choose>
	</sql>

	<select id="selectByPrimaryKey" parameterType="int" resultMap="ActionResult">
		<include refid="columns" />
		<include refid="tables" />
		WHERE 
			action.id = #{id}
	</select>
		
	<select id="selectSingleRecord" parameterType="map" resultMap="ActionResult">
		<include refid="columns" />
		<include refid="tables" />
		<include refid="criterias" />
	</select>
	
	<select id="selectMultiRecords" parameterType="map" resultMap="ActionResult">
		<include refid="columns" />
		<include refid="tables" />
		<include refid="criterias" />
		<include refid="orders" />
		<if test="offset != null and limit !=null and offset &gt; -1 and limit &gt; 0">
			OFFSET #{offset} ROWS
			FETCH NEXT #{limit} ROWS ONLY;
		</if>
	</select>

	<select id="selectCounts" resultType="int" parameterType="map">
		SELECT count(distinct action.id)
		<include refid="tables" />
		<include refid="criterias" />
	</select>
	
	<select id="selectAllPageNames" resultType="String">
		select action.page
		<include refid="tables" />
		GROUP BY action.page
		ORDER BY action.page DESC
	</select>
</mapper>